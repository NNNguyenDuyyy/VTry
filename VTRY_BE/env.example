# Backend Configuration
NODE_ENV=production
PORT=4000

# MongoDB Connection (External MongoDB instance)
MONGO_URI=mongodb://username:password@your-mongodb-host:27017/your-database-name?authSource=admin

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# PayOS Payment Gateway Configuration
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key
PAYOS_RETURN_URL=http://localhost:3000/membership
PAYOS_CANCEL_URL=http://localhost:3000/payment-failed
PAYOS_WEBHOOK_URL=http://localhost:4000/api/payment/payos/webhook

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# Docker Hub Configuration (for build-and-push.cmd)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_IMAGE_NAME=vtry-backend
DOCKER_TAG=latest 